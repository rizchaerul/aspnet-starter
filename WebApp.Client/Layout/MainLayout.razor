@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @Body
</MudLayout>

@code {
    MudTheme CustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#0D2237",
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "8px",
        },
    };
}
